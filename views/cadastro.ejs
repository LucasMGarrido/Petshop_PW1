    <title>Cadastro de Usuário</title>
    <style>
        body{
            background-color: #dbbd98;
        }
    </style>
</head>
<body>

  <section>
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
      <div class="container">
        <div class="row gx-lg-5 align-items-center">

          <div class="col-lg-6 mb-5 mb-lg-0 row justify-content-center">
            <img src="https://media.discordapp.net/attachments/1007776867283120270/1072342094603104376/0bbbe62c-36dc-4ca9-9d9c-88a275007eea-removebg-preview.png" alt="">
          </div>
    
          <div class="col-lg-6 mb-5 mb-lg-0">
            <div class="card cascading-right" style="
                background: hsla(0, 0%, 100%, 0.55);
                backdrop-filter: blur(30px);
                ">
              <div class="card-body p-4 shadow-5 text-left">
                <h2 class="fw-bold mb-3">Faça seu cadastro agora:</h2>
  
                <form action="/api/signup" method="post">
  
                  <!-- Nome input -->
                  <div class="form-outline mb-3">
                      <label class="form-label" for="nome">Nome:</label>
                      <input type="text" id="nome" class="form-control" name="nome"/>
                    </div>
  
                  <!-- Email input -->
                  <div class="form-outline mb-3">
                      <label class="form-label" for="email">Email:</label>
                      <input type="text" id="email" class="form-control" name="email"/>
                  </div>
    
                  <!-- Password input -->
                  <div class="form-outline mb-3">
                      <label class="form-label" for="senha">Senha:</label>
                      <input type="password" id="senha" class="form-control" name="senha"/>
                  </div>
    
                  <!-- Submit button -->
                  <input type="submit" value="Entrar" class="btn btn-block mb-4" style="background-color: #dbbd98;">
                </form>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
    <!-- Jumbotron -->
  </section>





























